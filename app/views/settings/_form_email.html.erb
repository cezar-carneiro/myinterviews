<div class="form-group <%= 'has-error' unless @setting_email_form.errors[:from].blank? %>">
  <%= email_form.label(:from, class: 'col-sm-2 control-label') do
    raw("#{t('helpers.label.setting[email].from')}<span class=\"text-red\" title=\"#{t('default.hint.mandatory')}\">*</span>")
  end %>
  <div class="col-sm-10">
    <%= email_form.text_field :from, class: 'form-control', autofocus: true %>
