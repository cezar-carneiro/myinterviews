<div class="box-body">
  <div class="form-group <%= 'has-error' unless @interview.errors[:my_application].blank? %>">
    <%= form.label :my_application, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.collection_select(:my_application_id, @applications, :id, :description,
                              { include_blank: true }, class: 'form-control') %>
      <%= show_validation_errors(@interview.errors[:my_application]) %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' unless @interview.errors[:interviewer_name].blank? %>">
    <%= form.label :interviewer_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :interviewer_name, class: 'form-control', autofocus: true %>
      <%= show_validation_errors(@interview.errors[:interviewer_name]) %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' unless @interview.errors[:interviewer_email].blank? %>">
    <%= form.label :interviewer_email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :interviewer_email, class: 'form-control', autofocus: true %>
      <%= show_validation_errors(@interview.errors[:interviewer_email]) %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' unless @interview.errors[:type_of].blank? %>">
    <%= form.label :type_of, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.select :type_of, options_for_enum(@interview, :type_of), {}, class: 'form-control' %>
      <%= show_validation_errors(@interview.errors[:type_of]) %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' unless @interview.errors[:at].blank? %>">
    <%= form.label :at, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :at, class: 'form-control datepicker' %>
      <%= show_validation_errors(@interview.errors[:at]) %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' unless @interview.errors[:notes].blank? %>">
    <%= form.label :notes, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.cktext_area :notes, rows: 10 %>
      <%= show_validation_errors(@interview.errors[:notes]) %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' unless @interview.errors[:feedback].blank? %>">
    <%= form.label :feedback, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.cktext_area :feedback, rows: 10 %>
      <%= show_validation_errors(@interview.errors[:feedback]) %>
    </div>
  </div>
</div>
<!-- /.box-body -->
<script type="text/javascript">
  $(function () {
    $('.datepicker').datetimepicker({
      format: 'YYYY-MM-DD HH:mm',
      icons: {
        time: 'fa fa-clock-o',
        date: 'fa  fa-calendar',
        up: 'fa fa-chevron-up',
        down: 'fa fa-chevron-down',
        previous: 'fa fa-chevron-left',
        next: 'fa fa-chevron-right',
        today: 'fa fa-crosshairs',
        clear: 'fa fa-trash',
        close: 'fa fa-remove'
      }
    });
  });
</script>